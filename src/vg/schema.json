{
    "$schema": "http://json-schema.org/schema",
    "id": "SchemanticsForVideogular",
    "title": "videogular Schema",
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "default": "name"
      },
      "path": {
        "type": "string",
        "default": "app"
      },
      "appRoot": {
        "type": "string"
      },
      "sourceDir": {
        "type": "string",
        "default": "src"
      },
      "vgService": {
        "type": "boolean",
        "default": false,
        "description": "Flag to indicate whether an videogular service should be generated.",
        "alias": "vgs"
      }
    }
  }
  